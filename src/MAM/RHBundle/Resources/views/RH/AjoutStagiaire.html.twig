{% extends "::base.html.twig" %}
{% block sstitle %}Ajouter un stagiaire{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}

{% block corps %}
<div class="col-lg-8">
    <form method="post" {{form_enctype(form) }}>
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-unlock"></i>
                    &nbsp;&nbsp;Informations générales
                </div>
                <div class="panel-body">
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <label>{{ form_label(form.Nom, "Nom ") }}</label>
                        <div class="form-control">
                            {{ form_widget(form.Nom) }}
                        </div>
                    </div>
                    <div class="form-group">

                        <label>{{ form_label(form.Prenom, "Prenom ") }}</label>
                        <div class="form-control">
                            {{ form_widget(form.Prenom) }}
                        </div>
                    </div>
                    <div class="form-group">

                        <label>{{ form_label(form.CIN, "CIN ") }}</label>
                        <div class="form-control">
                            {{ form_widget(form.CIN) }}
                        </div>

                    </div>
                    <div class="form-group">
                        <label>{{ form_label(form.Adresse, "Adresse ") }}</label>

                        {{ form_widget(form.Adresse) }}
                    </div>
                    <div class="form-group">
                        <label>{{ form_label(form.Tel, "Tel ") }}</label>
                        <div class="form-control">
                            {{ form_widget(form.Tel) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label>{{ form_label(form.Etablissement, "Etablissement") }}</label>
                        <div class="form-control">
                            {{ form_widget(form.Etablissement) }}
                        </div>
                    </div>

                </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <i class="fa fa-lock"></i>
                        &nbsp;&nbsp;Informations sur stage
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label>{{ form_label(form.date_deb, "Date début de stage ") }}</label>
                                {{ form_widget(form.date_deb) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(form.date_fin, "Date fin de stage ") }}</label>
                            {{ form_widget(form.date_fin) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(form.duree, "Durée de stage ") }}</label>
                            {{ form_widget(form.duree) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(form.sujet, "Sujet ") }}</label>
                                {{ form_widget(form.sujet) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(form.employeNormal, "Encadrant ") }}</label>
                                {{ form_widget(form.employeNormal) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(form.Diplome, "Dérnier diplome") }}</label>
                            <div class="form-control">
                                {{ form_widget(form.Diplome) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(form.Niveau_scol, "Niveau Scolaire ") }}</label>
                            {{ form_widget(form.Niveau_scol) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.Cv) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-outline  btn-primary">Envoyer</button>
                <button type="reset" class="btn btn-outline  btn-primary">Renitialiser</button>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>
</div>
{% endblock %}