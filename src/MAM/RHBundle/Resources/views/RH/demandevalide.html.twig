{% extends "::base.html.twig" %}
{% block sstitle %}Vos Demande Valider{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}

{% block corps %}
<div class="col-lg-12">
    <div class="panel panel-primary">
       <div class="panel-heading">
           <i class="fa fa-th-list"></i>
           Demande Valider
       </div>
       <div class="panel-body">
           <div class="dataTable_wrapper">
               <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                     <thead>
                      <tr>
                          <th>Demande</th>
                          <th>Demander le</th>
                          <th>Priorit√©</th>
                          <th>Valider par</th>
                      </tr>
                     </thead>

                     <tbody>
                     {% for demande in demandes %}
                       <tr class="odd gradeX">
                           <td>{{  demande.Libelle  }}</td>
                           <td>{{  demande.DateDEM|date('d/m/Y H:i:s')  }}</td>
                           <td>{{  demande.priorite }}</td>
                           <td>{{  demande.ResponsableRH.Nom }} {{  demande.ResponsableRH.Prenom }}</td>

                       </tr>

                     {% endfor %}
                     </tbody>

               </table>
           </div>
       </div>
    </div>
</div>
{% endblock %}
{% block panel %}
{% endblock %}