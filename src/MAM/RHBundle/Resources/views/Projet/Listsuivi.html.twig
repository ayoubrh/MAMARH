
{% extends "::base.html.twig" %}
{% block sstitle %}Suivis{% endblock %}

{% block actualite %}
{% block demnonv %}{{ demandenonv }}{% endblock %}
{% endblock %}


{% block corps %}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Liste des taches réaliser
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>Tache</th>
                            <th>Description</th>
                            <th>Date début</th>
                            <th>Date fin</th>
                            <th>Durée</th>
                        </tr>
                        </thead>
                        <tbody>


                        {% for suivi in suivis %}
                            <tr class="odd gradeX">
                                <td>{{ suivi.Tache }}</td>
                                <td>{{ suivi.Descriptif }}</td>
                                <td>{{ suivi.DateDTache|date('d/m/Y H:i:s') }}</td>
                                <td>{{ suivi.DateFTache|date('d/m/Y H:i:s') }}</td>
                                <td class="center">{{ suivi.DureeTache }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>




    <script src="{{ asset('dist/js/sb-admin-2.js')}}"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}