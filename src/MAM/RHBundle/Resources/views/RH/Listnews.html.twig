
{% extends "::base.html.twig" %}
{% block sstitle %}Liste des offres{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}


{% block corps %}
<div class="row">

    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-list-alt"></i>
                Liste des Offres
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                        <thead>

                        <tr>
                            <th>Libellé</th>
                            <th>Date de création</th>
                            <th>Description</th>

                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>


                        {% for offre in entities%}
                            <tr class="odd gradeX">
                                <td>{{ offre.Libelle }}</td>
                                <td>{{ offre.CreatedAt|date('d/m/Y H:i:s') }}</td>
                                <td>{{ offre.discription }}</td>
                                <td align="center">
                                    <a href="{{ path('mamrh_editnews', {'id' : offre.id}) }}">
                                        <i class="fa fa-edit"></i>
                                    </a>  &nbsp;&nbsp;
                                    <a href="{{ path('mamrh_deletenews', {'id' : offre.id}) }}">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    {% block panel %}
    {% endblock  %}
{% endblock %}