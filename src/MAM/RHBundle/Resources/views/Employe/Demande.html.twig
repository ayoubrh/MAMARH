{% extends "::base.html.twig" %}
{% block sstitle %}Demandes{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}

{% block corps %}

    <div class="col-lg-8">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <i class="fa fa-edit"></i>
            Ajout d'une demande
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="row">
                <form method="post" {{ form_enctype(form) }}>
                        {{ form_errors(form) }}
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-lg-4">
                                <label>{{ form_label(form.Libelle, "Attestation : ") }}</label>
                                </div>
                                <div class="col-lg-8">
                                <div class="form-control">
                                    {{ form_widget(form.Libelle) }}
                                </div>
                                </div>
                             </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="row">
                                <div class="col-lg-4">
                                <label>{{ form_label(form.priorite, "Priorité :") }}</label>
                                </div>
                                <div class="col-lg-8">
                                <div class="form-control">
                                {{ form_widget(form.priorite) }}
                                </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-1">
                            <div id="dataTables-example_filter" class="dataTables_filter">
                            <button type="submit" class="btn btn-outline btn-primary btn-circle"><i class="fa fa-plus"></i></button>
                            </div>
                        </div>
                    {{ form_rest(form) }}
                    </form>
            </div>

        <!-- /.panel-body -->
    </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <i class="fa fa-list"></i>
            Liste des demandes
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Demande</th>
                                <th>Demander le</th>
                                <th>Priorité</th>
                                <th>Validation</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for demande in demandes %}
                                {% if(demande.valide==true) %}
                                    <tr class="success">
                                        <td>{{  demande.Libelle  }}</td>
                                        <td>{{  demande.DateDEM|date('d/m/Y H:i:s')  }}</td>
                                        <td>{{  demande.priorite }}</td>
                                        <td>Valider</td>
                                    </tr>
                                {% else %}
                                    <tr class="warning">
                                        <td>{{ demande.Libelle }}</td>
                                        <td>{{ demande.DateDEM|date('d/m/Y H:i:s') }}</td>
                                        <td>{{ demande.priorite }}</td>
                                        <td>En cours</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- /.panel -->
{% endblock %}