
{% extends "::base.html.twig" %}
{% block sstitle %}Suivis{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}


{% block corps %}
<div class="row">

    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-list-alt"></i>
                Liste des taches réaliser
    {% if is_granted('ROLE_RH') %}
                <span class="pull-right"><a href="{{ path('mamrh_AjoutSuivi', {'id' : projet}) }}" align="right"><button class="btn btn-success" type="button" align="right">Ajouter une tâche</button></a>
            </span>
    {% endif %}
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                        <thead>

                        <tr>
                            <th>Tache</th>
                            <th>Description</th>
                            <th>Date début</th>
                            <th>Date fin</th>
                            <th>Durée</th>
                        </tr>
                        </thead>
                        <tbody>


                        {% for suivi in suivis %}
                            <tr class="odd gradeX">
                                <td>{{ suivi.Tache }}</td>
                                <td>{{ suivi.Descriptif }}</td>
                                <td>{{ suivi.DateDTache|date('d/m/Y H:i:s') }}</td>
                                <td>{{ suivi.DateFTache|date('d/m/Y H:i:s') }}</td>
                                <td class="center">{{ suivi.DureeTache }} jour</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    {% block panel %}
    {% endblock  %}
{% endblock %}