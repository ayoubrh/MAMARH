
{% extends "::base.html.twig" %}
{% block sstitle %}Postulation{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}


{% block corps %}
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-th-list"></i>
                Tableau des Postulations
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>CIN</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Spécialité</th>
                            <th>Diplome</th>
                            <th>Télé</th>
                            <th>CV</th>
                        </tr>
                        </thead>


                        <tbody>

                            <tr class="odd gradeX">
                                <td>{{ entities.CIN }}</td>
                                <td>{{ entities.Nom }}</td>
                                <td>{{ entities.Prenom }}</td>
                                <td>{{ entities.Email }}</td>
                                <td>{{ entities.Specialite }}</td>
                                <td>{{ entities.Diplome }}</td>
                                <td>{{ entities.Tel }}</td>
                                <td>{{ asset(entities.cv.webPath) }}</td>
                            </tr>

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block panel %}
{% endblock %}