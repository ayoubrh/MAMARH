{% extends "::base.html.twig" %}
{% block sstitle %}Liste des employés{% endblock %}

{% block corps %}
<div class="col-lg-12">
    <div class="panel panel-primary">
       <div class="panel-heading">
           <i class="fa fa-th-list"></i>
           Tableau des émployés
       </div>
       <div class="panel-body">entities
           <div class="dataTable_wrapper">
               <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                     <thead>
                      <tr>
                          <th>Nom</th>
                          <th>Prénom</th>
                          <th>CIN</th>
                          <th>Télé</th>
                          <th>Email</th>
                          <th>Adresse</th>
                          <th>Fonction</th>
                          <th>Département</th>
                          <th>Opération</th>
                      </tr>
                     </thead>

                     <tbody>
                     {% for employe in entities %}
                       <tr class="odd gradeX">
                           <td>{{ employe.Nom }}</td>
                           <td>{{ employe.Prenom }}</td>
                           <td>{{ employe.CIN }}</td>
                           <td>{{ employe.Tel }}</td>
                           <td>{{ employe.email }}</td>
                           <td>{{ employe.Adresse }}</td>
                           <td>{{ employe.Fonction }}</td>
                           <td>{{ employe.departement.Libelle }}</td>
                           <td align="center">
                               <a href="#">
                                   <i class="fa fa-edit"></i>
                               </a>  &nbsp;&nbsp;
                               <a href="#">
                                   <i class="fa fa-trash-o"></i>
                               </a>
                           </td>
                       </tr>
                     {% endfor %}
                     </tbody>

               </table>
           </div>
       </div>
    </div>
</div>
{% endblock %}
{% block panel %}
{% endblock %}