
{% extends "::base.html.twig" %}
{% block sstitle %}Demandes{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}

{% block corps %}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-list-alt"></i>
                Liste des demandes
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>Nom & Prenom</th>
                            <th>Demande</th>
                            <th>Date</th>
                            <th>Priorit√©</th>
                            <th>Validation</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for demande in demandes %}
                            <tr class="odd gradeX">
                                <td>{{ demande.Employe.Nom }} {{ demande.Employe.Prenom }}</td>
                                <td>{{ demande.Libelle }}</td>
                                <td>{{ demande.DateDEM|date('d/m/Y H:i:s') }}</td>
                                <td>{{ demande.priorite }}</td>
                                <td align="center">
                                    <a href="{{ path('mamrh_rh_validdemande', {'id': demande.id}) }}" >
                                        <button type="button" class="btn btn-outline btn-primary btn-circle"><i class="fa fa-check"></i></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
    {% block panel %}
    {% endblock  %}
{% endblock %}