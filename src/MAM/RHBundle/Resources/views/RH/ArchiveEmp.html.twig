{% extends "::base.html.twig" %}
{% block sstitle %}Liste des employés démissionnée{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}

{% block corps %}
<div class="col-lg-12">
    <div class="panel panel-primary">
       <div class="panel-heading">
           <i class="fa fa-th-list"></i>
           Tableau des émployés
       </div>
       <div class="panel-body">
           <div class="dataTable_wrapper">
               <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                     <thead>
                      <tr>
                          <th>Matricule</th>
                          <th>Nom</th>
                          <th>Prénom</th>
                          <th>Fonction</th>
                          <th>Département</th>
                          <th>Fonc</th>
                      </tr>
                     </thead>
                   {% set i = 0 %}

                     <tbody>
                     {% for employe in entities %}
                       <tr class="odd gradeX">
                           <td>{{ employe.Matricule }}</td>
                           <td>{{ employe.Nom }}</td>
                           <td>{{ employe.Prenom }}</td>
                           <td>{{ employe.Fonction }}</td>
                           <td>{{ employe.departement.Libelle }}</td>
                           <td>{{ dtype[i][0]['dtype'] }}</td>

                       </tr>
                         {% set i = i+1 %}

                     {% endfor %}
                     </tbody>

               </table>
           </div>
       </div>
    </div>
</div>
{% endblock %}
{% block panel %}
{% endblock %}