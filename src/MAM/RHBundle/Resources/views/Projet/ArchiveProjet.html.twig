{% extends "::base.html.twig" %}
{% block sstitle %}Liste des projets{% endblock %}
{% block panel %}
{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}


{% block corps %}
  <div class="col-lg-12">
    <div class="panel panel-primary">
    <div class="panel-heading">
        <i class="fa fa-list-alt"></i>
        Tableau de tous les projets Archivé
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
    <div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
    <tr>
        <th>Libelle</th>
        <th>Chef de Projet</th>
        <th>Date debut</th>
        <th>Durée éstime</th>
        <th>Suivi</th>
    </tr>
    </thead>
    <tbody>
        {% for projet in projets %}
            <tr class="odd gradeX">
                <td>{{ projet.Libelle }}</td>
                <td>{{ projet.chefProjet.Nom }} {{ projet.chefProjet.Prenom }}</td>
                <td>{{ projet.DateDeb|date('d/m/Y') }}</td>
                <td>{{ projet.DureeEstime }}</td>
                <td align="center"><a href="{{ path('mamrh_ListSuivi', {'id' : projet.id}) }}"><i class="fa fa-arrow-circle-right"></i></a></td>
            </tr>
        {% endfor %}
    </tbody>
    </table>
    </div>
    <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
    </div>
    <!-- DataTables JavaScript -->
    <script src="{{ asset('bower_components/DataTables/media/js/jquery.dataTables.min.js')}}"></script>
    <script src="{{ asset('bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js')}}"></script>

    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}