{% extends "::base.html.twig" %}
{% block sstitle %}Afficher la liste des stagiaires{% endblock %}

{% block projet %}{{ nbrprojet }}{% endblock %}
{% block demnov %}{{ demandev }}{% endblock %}
{% block stagiaire %}{{ nbrstagiaire }}{% endblock %}
{% block demnonv %}{{ demandenonv }}{% endblock %}

{% block corps %}
<div class="col-lg-12">
    <div class="panel panel-primary">
       <div class="panel-heading">
           <i class="fa fa-list-alt"></i>
           Tableau des stagiaires
       </div>
       <div class="panel-body">
           <div class="dataTable_wrapper">
               <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Adresse</th>
                        <th>Téléphone</th>
                        <th>Sujet</th>
                        <th>Date début</th>
                        <th>Date fin</th>
                        <th>CV</th>
                        <th>Opérations</th>
                    </tr>
                    </thead>
                    {% for stagiaire in entities %}
                    <tbody>
                    <tr class="odd gradeX">
                        <td>{{ stagiaire.Nom }}</td>
                        <td>{{ stagiaire.Prenom }}</td>
                        <td>{{ stagiaire.Adresse }}</td>
                        <td>{{ stagiaire.Tel }}</td>
                        <td>{{ stagiaire.sujet }}</td>
                        <td>{{ stagiaire.datedeb|date('d/m/Y') }}</td>
                        <td>{{ stagiaire.datefin|date('d/m/Y') }}</td>
                        <td align="center"><a href="{{ asset(stagiaire.cv.webPath) }}"><i class="fa fa-download"></i></a></td>
                        <td align="center">
                            <a href="#">
                                <i class="fa fa-edit"></i>
                            </a>  &nbsp;&nbsp;
                            <a href="#">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>

                    </tr>
                    </tbody>
                    {% endfor %}
               </table>
           </div>
       </div>
    </div>
    </div>
    {% block panel %}
    {% endblock  %}
{% endblock %}